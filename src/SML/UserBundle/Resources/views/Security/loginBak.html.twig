{% extends "@SMLPlatform/layout.html.twig" %}

{% block body %}

    {# S'il y a une erreur, on l'affiche dans un joli cadre #}
    {% if error %}
        <div class="alert alert-danger">{{ error.message }}</div>
    {% endif %}

    <div class="well" style="width: 400px;">
        {# Le formulaire, avec URL de soumission vers la route « login_check » comme on l'a vu #}
        <form action="{{ path('login_check') }}" method="post">
            <div class="form-group">
            <label for="username">Login :</label>
            <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" />
            </div>

            <div class="form-group">
            <label for="password">Mot de passe :</label>
            <input type="password" class="form-control" id="password" name="_password" />
            </div>
            <br />
            <input class="btn btn-info" type="submit" value="Connexion" />
        </form>
    </div>

{% endblock %}